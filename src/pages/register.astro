---
import Layout from '../layouts/Layout.astro';

if (Astro.locals.user) {
  return Astro.redirect('/');
}
---
<Layout title="Register">
  <div class="form-card">
    <div class="form-icon">
      <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
        <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
      </svg>
    </div>
    <h1>Create account</h1>
    <p class="form-subtitle">Join BookShare and start sharing books</p>
    <div id="register-error"></div>
    <form hx-post="/api/auth/register" hx-target="#register-error" hx-swap="innerHTML">
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" required placeholder="Choose a username" />
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required placeholder="you@example.com" />
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required minlength="6" placeholder="At least 6 characters" />
      </div>
      <button type="submit" class="btn btn-primary btn-full">Register</button>
    </form>
    <p class="form-footer">Already have an account? <a href="/login">Login</a></p>
  </div>
</Layout>

<style>
  .form-icon {
    text-align: center;
    margin-bottom: 1rem;
    color: var(--blue-600);
  }
  .form-subtitle {
    text-align: center;
    color: var(--gray-500);
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }
  .btn-full {
    width: 100%;
    padding: 0.7rem;
    font-size: 0.95rem;
  }
  .form-footer {
    text-align: center;
    margin-top: 1.25rem;
    font-size: 0.875rem;
    color: var(--gray-500);
  }
</style>
