---
interface Props {
  action: string;
  method: 'post' | 'put';
  book?: {
    title: string;
    author: string;
    description: string;
    isAvailable: boolean;
  };
}

const { action, method, book } = Astro.props;
---
<div class="form-card">
  <div id="form-error"></div>
  <form
    {...(method === 'post' ? { 'hx-post': action } : { 'hx-put': action })}
    hx-target="#form-error"
    hx-swap="innerHTML"
  >
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" id="title" name="title" value={book?.title ?? ''} required placeholder="Enter book title" />
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      <input type="text" id="author" name="author" value={book?.author ?? ''} required placeholder="Enter author name" />
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea id="description" name="description" rows="4" placeholder="Brief description of the book">{book?.description ?? ''}</textarea>
    </div>
    <div class="form-group">
      <label class="toggle-label">
        <span class="toggle-switch">
          <input type="checkbox" name="isAvailable" checked={book?.isAvailable ?? true} />
          <span class="toggle-slider"></span>
        </span>
        Available for sharing
      </label>
    </div>
    <div class="form-actions">
      <button type="submit" class="btn btn-primary" style="flex: 1;">
        {method === 'post' ? 'Add Book' : 'Save Changes'}
      </button>
      <a href="/books/my" class="btn">Cancel</a>
    </div>
  </form>
</div>
