---
import BookCard from './BookCard.astro';

interface Props {
  books: Array<{
    id: string;
    title: string;
    author: string;
    description: string;
    isAvailable: boolean;
    bookedByUserId?: string | null;
    bookedByUsername?: string;
    username?: string;
  }>;
  isOwner?: boolean;
  currentUserId?: string;
}

const { books, isOwner = false, currentUserId } = Astro.props;
---
<div class="book-grid">
  {books.map(book => (
    <BookCard book={book} isOwner={isOwner} currentUserId={currentUserId} />
  ))}
</div>
